{
  "name": "npm-package-webpack",
  "version": "2.0.1",
  "description": "Template for building a React component lib compiled with Babel and Webpack",
  "main": "build/index.js",
  "scripts": {
    "dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "analyze": "webpack-bundle-analyzer bundle/stats.json",
    "prepublishOnly": "yarn build",
    "lint": "eslint src/**",
    "format": "prettier --write src/**"
  },
  "author": "Brykou",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brykou/npm-package-webpack.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@binance-academy/eslint-config-bnb": "2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "7.5.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.4",
    "eslint-plugin-react-hooks": "4.0.8",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "files": [
    "build/*"
  ]
}
